# Импорт библиотек
import pandas as pd
import numpy as np
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import MinMaxScaler, StandardScaler


# Загружаем датасет Титаник
url = "https://raw.githubusercontent.com/datasciencedojo/datasets/master/titanic.csv"
df = pd.read_csv(url)

# Показываем первые строки
df.head()


df.info()



df.head(10)


missing_values = df.isnull().sum()
print("Пропущенные значения:")
print(missing_values)


# Заполняем Age медианой
df['Age'].fillna(df['Age'].median(), inplace=True)

# Заполняем Embarked модой (самым частым значением)
df['Embarked'].fillna(df['Embarked'].mode()[0], inplace=True)

# Удаляем Cabin (слишком много пропусков)
df.drop('Cabin', axis=1, inplace=True)

# Проверяем, что пропусков нет
print("После заполнения:")
print(df.isnull().sum())


# Нормализуем Age с помощью MinMaxScaler
scaler = MinMaxScaler()
df['Age_normalized'] = scaler.fit_transform(df[['Age']])

# Показываем результат
df[['Age', 'Age_normalized']].head()


# Преобразуем пол (Sex) в числа
df['Sex'] = df['Sex'].map({'male': 0, 'female': 1})

# One-Hot Encoding для Embarked
df = pd.get_dummies(df, columns=['Embarked'], drop_first=True)

# Показываем результат
df.head()


df.to_csv("processed_titanic.csv", index=False)
print("Данные сохранены в processed_titanic.csv")



